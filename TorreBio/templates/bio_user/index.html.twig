{% extends 'base.html.twig' %}

{% block title %}Vista Bio {{ name_user }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="card-header">Hello to bio of {{ name_user }}! âœ…</h1>
</div>
<div>
	{% if user_profile_a|length > 0 %}
	<h1>Hay usuario</h1>
	<li> {# {{ user_profile_a }} #}</li>
	{% else %}
	<h1>No hay registros</h1>
	{% endif %}
</div>
<div id="userPro" class="card" style="width: 80%;">
	<img src="{{url_imgBio}}" class="card-img-top" alt="...">
	<div class="card-body">
		<h5 class="card-title">Welcome to bio of {{ name_user }}</h5>
		<p class="card-text"> {{name_proHead}}</p>
	</div>
	<div class="accordion">
		{% for exp in user_exp %}
		<div class="card">
			<div class="card-header" id={{exp.id|e}}>
				<h2 class="mb-0">
					<button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
						{{ exp.name|e }}
					</button>
				</h2>
			</div>

			<div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
				<div class="card-body">
					<li>Categoria: {{ exp.category|e}}</li>
					<li>Empresa: {{ exp["organizations"][0]["name"] }}</li>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
	<h1> ${ titulo } </h1>
	<p> ${ dataU } </p>
</div>
{% endblock %}
